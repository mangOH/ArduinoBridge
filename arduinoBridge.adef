version: 1.0.0
sandboxed: true
start: auto
executables:
{
    arduinoBridge = ( bridgeComponent )
}

processes:
{
    run:
    {
        ( arduinoBridge )
    }

    envVars:
    {
        LE_LOG_LEVEL=DEBUG
    }

    maxCoreDumpFileBytes: 512K
}

bindings:
{
    arduinoBridge.bridgeComponent.dataRouter -> dataRouter.dataRouter
}

requires:
{
    device:
    {
        [rw]    /dev/ttyUSB0 /dev/ttyUSB0
    }
}
